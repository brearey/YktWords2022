<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4697D2"
    tools:context=".DigitalsActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto"
        android:text="СЫЫППАРАЛАР"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/one_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/one" />

            <ImageView
                android:id="@+id/two_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/two" />

            <ImageView
                android:id="@+id/three_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/three" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/four_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/four" />

            <ImageView
                android:id="@+id/five_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/five" />

            <ImageView
                android:id="@+id/six_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/six" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/seven_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/seven" />

            <ImageView
                android:id="@+id/eight_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/eight" />

            <ImageView
                android:id="@+id/nine_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/nine" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/zero_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/zero" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/toggle_music"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/music_toggle" />

        <ImageView
            android:id="@+id/button_home"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/toggle_sound"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sound_toggle" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>