<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4697D2"
    tools:context=".MainMenuActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto"
        android:text="ХАЙЫСХАНЫ ТАЛ"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="150dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                tools:ignore="NestedWeights">
                <ImageView
                    android:id="@+id/cat_animals_button"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:padding="8dp"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/animals"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Кыыллар"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="8dp">
                <ImageView
                    android:id="@+id/cat_chars_button"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:padding="8dp"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/chars"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Буукубулар"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                tools:ignore="NestedWeights">
                <ImageView
                    android:id="@+id/cat_digitals_button"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:padding="8dp"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/numbers"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Сыыппаралар"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/cat_diftongs_button"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:layout_weight="0.8"
                    android:padding="8dp"
                    app:srcCompat="@drawable/diftongs" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Дифтоҥнар"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                tools:ignore="NestedWeights">
                <ImageView
                    android:id="@+id/cat_colors_button"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:padding="8dp"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/colors"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Өҥнөр"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="8dp">
                <ImageView
                    android:id="@+id/cat_calendar_button"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:padding="8dp"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/calendar"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Ыйдар"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/toggle_music"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/music_toggle" />

        <ImageView
            android:id="@+id/button_home"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/toggle_sound"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@drawable/sound_toggle" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>