<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4697D2"
    tools:context=".AnimalsActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto"
        android:text="КЫЫЛЛАР"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="200dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fox_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:padding="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/fox" />

            <ImageView
                android:id="@+id/kurochka_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:padding="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/kurochka" />

            <ImageView
                android:id="@+id/koala_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:padding="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/koala" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/krab_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:padding="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/krab" />

            <ImageView
                android:id="@+id/kit_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:padding="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/kit" />

            <ImageView
                android:id="@+id/ezik_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:padding="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ezik" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tiger_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:padding="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/tiger" />

            <ImageView
                android:id="@+id/pig_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:padding="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pig" />

            <ImageView
                android:id="@+id/cow_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:padding="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cow" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/toggle_music"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/music_toggle" />

        <ImageView
            android:id="@+id/button_home"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/toggle_sound"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sound_toggle" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>